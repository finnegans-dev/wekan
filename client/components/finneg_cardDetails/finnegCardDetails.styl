@import 'nib'

.containerFinnegCardDetails
  display: flex;
  position: fixed;
  z-index: 9999;
  top: 10vh;
  left: 20%;
  height: 80%;
  width: 60%;
  border: 1px solid #91959b;
  border-top: 2px solid #91959b;
  .left
    width: 30%
    background-color: #f8f8f9
    padding: 4% 0 0 3%;
    overflow-y: auto;
    .left-item
      min-height 20vh
      .item-section
        display: flex
        height 26px
        i
          background: #24cffd;
          border-radius: 50%;
          width: 22.5px;
          height: 22.5px;
          line-height: 22.5px;
          text-align: center;
          margin: 4px 8px 4px 10px;
          color: white
        .title
          line-height: 30px;
          color #c4c5ca
          font-size: 14px
      .plus
        margin-left: 40px
        i
          color: #24cffd;
          font-size: 20px;
      .viewer
        color: #787d85;
        font-weight: bolder;
        margin-left: 40px;
        font-size: 14px;
      .js-add-labels
        margin-left: 40px;
        width: 70%;
        display: block;
      .due-date
        background-color: transparent
        color: #787d85;
        font-weight: bolder;
        font-size: 14px;
        margin-left: 35px
        ::before
          content: ''

  .right
    width: 70%
    background-color: white
    overflow-y: auto;
    textarea
      margin-bottom: 0;
    .edit-controls
    .add-controls
      margin-bottom: 2px
      margin-top: 10px
      display: block
      button
        float right
        border-radius: 4px
        margin: 0px 4px 0 0;
      .primary
        background-color: #3f51b5
        color: white
      .base
        color: rgba(0,0,0,.87);
        background-color: #fff;

    .add-controls
      .primary
        background-color: #A177FF

    .card-details
      padding: 0 20px
      flex-shrink: 0
      flex-basis: 470px
      will-change: flex-basis
      overflow-y: auto
      overflow-x: hidden
      border-radius: bottom 3px
      z-index: 20 !important
      animation: flexGrowIn 0.1s
      transition: flex-basis 0.1s
      .activities
        padding-top: 0
      .activity-title
        margin: 0 0.5em -0.2em;

      .js-new-comment
        border: 1px solid #cdcfd2;
        border-radius: 4px;
        padding: 10px;
        textarea
          max-height 37px
          padding: 9px 11px;
          border: 0
          box-shadow: none
          background-color: transparent

      .card-details-header
        margin: 0 -20px 5px
        padding 7px 16px
        font-size: 17px
        .fa
          background: #24cffd;
          border-radius: 50%;
          width: 24px;
          height: 24px;
          line-height: 24px !important;
          text-align: center;
          margin: 4px 8px 4px 10px !important;
          padding: 2px !important;
          color: white;
        .close-card-details,
        .card-details-menu
          float: right

        .card-details-title
          font-weight: bold
          font-size: 1.33em
          margin: 7px 0 0
          padding: 0
          width: 62%;

        .linked-card-location
          font-style: italic
          font-size: 1em
          margin-bottom: 0
          & p
            margin-bottom: 0

        form.inlined-form
          margin-top: 5px
          margin-bottom: 10px

        .card-details-list
          font-size: 0.85em
          margin-bottom: 3px

          a.card-details-list-title
            font-weight: bold

            &.is-editable
              display: inline-block
              background: darken(white, 10%)
              border-radius: 3px
              padding: 0px 5px

      .description
        border: 1px solid #cdcfd2;
        border-radius: 4px;
        padding: 10px;
        textarea
        &:focus
          min-height: 67px;
          border: 0
          box-shadow: none
          background-color: transparent


      .card-details-items
        display: flex
        flex-wrap: wrap
        margin: 15px 0

        .card-details-item
          margin-right: 0.5em
          &:last-child
            margin-right: 0
          &.card-details-item-labels,
          &.card-details-item-members,
          &.card-details-item-received,
          &.card-details-item-start,
          &.card-details-item-due,
          &.card-details-item-end,
          &.card-details-item-customfield,
          &.card-details-item-name
            max-width: 50%
            flex-grow: 1

        .card-details-item.card-details-item-received
            display: none;

      .card-details-item-title
        font-size: 16px
        color: #c4c5ca

      .card-label
        padding-top: 5px
        padding-bottom: 5px

      .activities
        padding-top: 10px

input[type="text"].attachment-add-link-input
  float: left
  margin: 0 0 8px
  width: 80%

input[type="submit"].attachment-add-link-submit
  float: left
  margin: 0 0 8px 4px
  padding: 6px 12px
  width: 18%

@media screen and (max-width: 800px)
  .card-details
    width: calc(100% - 40px)
    padding: 0px 20px 0px 20px
    margin: 0px
    transition: none

    .card-details-canvas
      width: 100%

    .card-details-header
      .close-card-details
        margin-right: 0px

      .card-details-menu
        margin-right: 10px
